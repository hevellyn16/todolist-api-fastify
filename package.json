{
  "dependencies": {
    "@fastify/cors": "^11.2.0",
    "@fastify/jwt": "^10.0.0",
    "@fastify/postgres": "^6.0.2",
    "@fastify/swagger": "^9.7.0",
    "@fastify/swagger-ui": "^5.2.5",
    "@prisma/adapter-ppg": "^7.3.0",
    "@prisma/client": "^7.3.0",
    "bcrypt": "^6.0.0",
    "dotenv": "^17.2.4",
    "fastify": "^5.7.4",
    "fastify-type-provider-zod": "^6.1.0",
    "pg": "^8.18.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/node": "^25.2.3",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^4.0.18",
    "dotenv-cli": "^11.0.0",
    "prisma": "^7.3.0",
    "supertest": "^7.2.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "test:up": "docker-compose -f docker-compose.test.yml up -d",
    "test:down": "docker-compose -f docker-compose.test.yml down",
    "pretest": "npm run test:up && dotenv -e .env.test -- npx prisma migrate deploy",
    "test": "dotenv -e .env.test -- vitest run",
    "posttest": "npm run test:down",
    "test:coverage": "vitest run --coverage",
    "build": "tsc && npx prisma generate",
    "start": "node dist/server.js",
    "postinstall": "npx prisma generate"
  },
  "prisma": {
    "seed": "npx tsx src/prisma/seed.ts"
  }
}
